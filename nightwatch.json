{
  "src_folders": [
    "test/etmall"
  ],
  "custom_commands_path": "custom-commands",
  "custom_assertions_path": "custom-assertions",
  "page_objects_path": "pages_objects",
  "globals_path": "",
  "test_settings": {
    "default": {
      "launch_url": "https://www.etmall.com.tw",
      "selenium_host": "http://localhost:4444",
      "desiredCapabilities": {
        "browserName": "chrome"
      },
      "screenshots": {
        "enabled": true,
        "on_failure": true,
        "path": "tests_output/screenshots"
      }
    },
    "chrome": {
      "desiredCapabilities": {
        "browserName": "chrome",
        "platform": "LINUX",
        "chromeOptions": {
          args: [
            '--window-size=1920,1280',
            '--ignore-certificate-errors',
            '--disable-gpu'
          ]
        }
      }
    },
    "firefox": {
      "desiredCapabilities": {
        "browserName": "firefox",
        'moz:firefoxOptions': {
          args: [
            '--window-size=1920,1280'
          ]
        }
      }
    },
    "mobile-chrome": {
      "desiredCapabilities": {
        "browserName": "chrome",
        "chromeOptions": {
          args: [
            '--ignore-certificate-errors',
            '--disable-gpu'
          ]
          mobileEmulation: {
            "deviceName": 'Apple iPhone 5',
            "user-agent": 'MQQBrowser/26 Mozilla/5.0 (Linux; U; Android 2.3.7; zh-cn; MB200 Build/GRJ22; CyanogenMod-7) AppleWebKit/533.1 (KHTML, like Gecko) Version/4.0 Mobile Safari/533.1'
          }
        }
      }
    }
  }
}